package profilePage;

import java.io.File;
import java.io.FileWriter;
import java.io.PrintWriter;
import java.util.Scanner;

public class dataManager {
	
	private final String configPath ="profile/profile.txt";
	
	public boolean isInstalled(){
		try{
			Scanner sc = new Scanner(new File(configPath));
			String isInstalled = sc.nextLine();
			if(isInstalled.contains("true")){
				return true;
			}
			else{
				return false;
			}
		}
		catch(Exception e){System.out.println("error is installerd"); return false;}
		
	}
	
	public String[] getData(){
		try{
			String[] data = new String[9];
			Scanner sc = new Scanner(new File(configPath));
			sc.nextLine();
			sc.useDelimiter(":=");
			int i=0;
			while(sc.hasNextLine()){
				sc.next();
				data[i]=sc.nextLine().substring(2);
				i++;
			}
			return data;
		}
		catch(Exception e){System.out.println("error getData"); return null;}
	}
	
	public void updateData(String[] data){
		FileWriter fichero = null;
        PrintWriter pw = null;
        try
        {
            fichero = new FileWriter(configPath);
            pw = new PrintWriter(fichero);
 
            for (int i = 0; i < 10; i++)
                pw.println("Linea " + i);
 
        } catch (Exception e) {
            e.printStackTrace();
        } finally {
           try {
           // Nuevamente aprovechamos el finally para 
           // asegurarnos que se cierra el fichero.
           if (null != fichero)
              fichero.close();
           } catch (Exception e2) {
              e2.printStackTrace();
           }
        }
	}
		
		public static void main(String[] args){
			dataManager d = new dataManager();
			String[] dd = d.getData();
			for(int i =0; i<9;i++){
				System.out.println(i+" "+dd[i]);
			}
			d.updateData(null);
	}
	

}
